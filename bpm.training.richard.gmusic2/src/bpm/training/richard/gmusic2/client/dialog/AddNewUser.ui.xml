<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:style>
		.modalHeader {
			margin-top: -4em;
		}
	</ui:style>
	<m:MaterialPanel>
		<m:MaterialModalContent>
			<m:MaterialTitle ui:field="modalTitle" title="Register" description="Please enter your details." addStyleNames="{style.modalHeader}"/>
			<m:MaterialTextBox ui:field="txtName" placeholder="Name" />
			<m:MaterialTextBox ui:field="txtLoginId" placeholder="Login ID" />
			<m:MaterialTextBox ui:field="txtPassword" placeholder="Password" type="password" />
			<m:MaterialTextBox ui:field="txtProfilePhoto" placeholder="Profile Photo URL"/>		
		</m:MaterialModalContent>
		
		<m:MaterialModalFooter align="right">
			<m:MaterialButton ui:field="btnRegister" waves="green" type="flat" text="Register" />
			<m:MaterialButton ui:field="btnCancel" waves="red" type="flat" text="Cancel" />
		</m:MaterialModalFooter>
	
	</m:MaterialPanel>
</ui:UiBinder> 